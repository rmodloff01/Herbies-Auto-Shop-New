<p id="notice"><%= notice %></p>

<h1 style="text-align:center">Parts</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Part ID</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Number in inventory</th>
      <th>Supplier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.part_id %></td>
        <td><%= part.part_name %></td>
        <td><%= part.part_cost %></td>
        <td><%= part.part_num_in_inventory %></td>
        <td><%= part.supp_id %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Part', new_part_path, class: "btn btn-primary" %>
