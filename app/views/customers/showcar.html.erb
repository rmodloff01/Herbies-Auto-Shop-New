<style>
th, td{
  padding-left: 20px;
}
</style>

<p id="notice"><%= notice %></p>

<h1 style="text-align:center">Cars</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Customer</th>
      <th>License plate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @belongstocust = Car.where(cust_id: @customer.cust_id) %>
    <% @belongstocust.each do |car| %>
      <tr>
        <td><%= car.car_make %></td>
        <td><%= car.car_model %></td>
        <td><%= car.car_year %></td>
        <td><%= @customer.cust_fname%> <%= @customer.cust_lname%></td>
        <td><%= car.license_plate %></td>
        <td><%= link_to 'Create New Invoice', new_invoice_path(@invoice, :cust_id => car.cust_id, :license_plate => car.license_plate) %>
        <td><%= link_to 'View Invoices', showinvoice_car_path(:id=> car.license_plate) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', customers_path, class: "btn btn-primary" %>
<br>
