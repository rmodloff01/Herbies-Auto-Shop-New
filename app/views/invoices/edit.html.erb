<h1>Edit Invoice</h1>

<%= render 'form', invoice: @invoice %>


<% cust = params[:cust_id] %>
<%customer = Customer.find(cust) %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Part ID</th>
      <th>Name</th>
      <th>Cost</th>
      <th>Number in inventory</th>
      <th>Supplier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  @parts = Part.all %>
    <% @parts.each do |part| %>
        <tr>
          <td><%= part.part_id %></td>
          <td><%= part.part_name %></td>
          <td><%= part.part_cost %></td>
          <td><%= part.part_num_in_inventory %></td>
          <td><%= part.supp_id %></td>
          <td>
          <%= form_with(model: included_part) do |form| %>
              <%= form.hidden_field :part_id, :value => part.part_id %>
              <%= form.hidden_field :inv_id, :value => @invoice_inv_id %>
          <%= form.submit 'Add Part', class: "btn btn-default" %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>


    </script>
</table>
</br></br>
<%= link_to 'Back', showcar_customer_path(customer), class: "btn btn-default" %>
