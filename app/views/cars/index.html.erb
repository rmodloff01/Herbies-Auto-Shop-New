<style>
th, td{
  padding-left: 20px;
}
</style>

<p id="notice"><%= notice %></p>

<h1 style="text-align:center">Cars</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>VIN</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Customer ID</th>
      <th>License Plate</th>
      <th>License State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%=car.car_vin %></td>
        <td><%= car.car_make %></td>
        <td><%= car.car_model %></td>
        <td><%= car.car_year %></td>
        <td><%= car.cust_id %></td>
        <td><%= car.license_plate %></td>
        <td><%= car.state %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Destroy', @car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path, class: "btn btn-primary" %>
